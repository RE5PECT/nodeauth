extends layout

block content
	h1 Login
	p Please login bellow
	form(method='post',action='/users/login/facebook')
		.form-group
			label Username
			input.form-control(name='username',type='text')
		.form-group
			label Password
			input.form-control(name='password',type='password')
		input.btn.btn-default(name='submit',type='submit',value='Login')
		input.btn.btn-primary(name='submit',type='submit',value='Login with Facebook')